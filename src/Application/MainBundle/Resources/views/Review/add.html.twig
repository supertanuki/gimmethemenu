{% extends '::base.html.twig' %}

{% block head_meta %}
    {% set meta = {
        'title': 'Add a review: ' ~ dish.name ~ ' - ' ~ dish.restaurant.name,
        'description': 'Add a review form for ' ~ dish.name
    } %}
    {% include 'ApplicationMainBundle:Common:headMeta.html.twig' with { 'meta': meta } %}
{% endblock %}

{% block body %}
    {% set restaurant_url = path('restaurant_show', dish.restaurant.paramsForUrl) %}


    <ol class="breadcrumb">
        <li><a href="{{ path('homepage') }}">Home</a></li>
        <li>{{ dish.restaurant.country }}</li>
        <li>{{ dish.restaurant.locality }}</li>
        <li><a href="{{ restaurant_url }}">{{ dish.restaurant }}</a></li>
        <li class="active"><a href="{{ dish_url }}">{{ dish.name }}</a></li>
    </ol>


    <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Add a review</h3>
                </div>
                <div class="panel-body">
                    {% include 'ApplicationMainBundle:Review:reviewForm.html.twig' with {'form_review': form_review} %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}