        </div>

        <div class="form-group">
            {{ form_label(review.photoFile) }}
            {{ form_widget(review.photoFile, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(review.when) }}
            <div class="row">
                <div class="col-md-4">
                    {{ form_widget(review.when, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
