{% if lastRestaurants %}
<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
        Last <span class="caret"></span>
    </a>
    <ul class="dropdown-menu" role="menu">
        {% for review in lastRestaurants %}
        <li>
            <a href="{{ path('restaurant_show', review.dish.restaurant.paramsForUrl) }}">
                {{ review.dish.restaurant.name }}
            </a>
        </li>
        {% endfor %}
    </ul>
</li>
{% endif %}