{% extends '::base.html.twig' %}

{% block head_meta %}
    {% set meta = {
    'title': dish.name ~ ' - ' ~ dish.restaurant.name ~' - Restaurant ' ~ ' - ' ~ dish.restaurant.locality,
    'description': 'Users reviews for ' ~ dish.name
    } %}
    {% include 'ApplicationMainBundle:Common:headMeta.html.twig' with { 'meta': meta } %}
{% endblock %}

{% block body %}

    {% if dish.dishes|length %}

        {% include 'ApplicationMainBundle:Dish:dishGroupContent.html.twig' %}

    {% else %}

        {% include 'ApplicationMainBundle:Dish:dishContent.html.twig' %}

    {% endif %}

{% endblock %}