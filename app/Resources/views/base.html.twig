<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="favicon.ico">

    <title>{% block title %}{% endblock %} GimmeTheMenu</title>

    {% stylesheets
        'bundles/applicationmain/bootstrap/css/bootstrap.min.css'
        'bundles/applicationmain/bootflat/css/bootflat.min.css'
        'bundles/applicationmain/css/*'
        filter='cssrewrite'
        output='css/compiled/css.css'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body role="document">

<!-- Fixed navbar -->
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('homepage') }}">
                <span class="glyphicon glyphicon-cutlery" aria-hidden="true"></span>
                GimmeThe<b>Menu</b>

            </a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">

                <li><a href="{{ path('restaurant_search') }}">Search a restaurant</a></li>

                {% if app.user %}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                            {{ app.user }} <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="timeline.html">My timeline</a></li>
                            <li><a href="{{ path('fos_user_profile_edit') }}">Edit my profile</a></li>
                            <li class="divider"></li>
                            <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                        </ul>
                    </li>
                {% else %}
                    <li><a href="{{ path('fos_user_security_login') }}">Log in</a></li>
                    <li><a href="{{ path('fos_user_registration_register') }}">Sign in</a></li>
                {% endif %}
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>


<div class="container">
    {# On affiche tous les messages flash dont le nom est « info » #}
    {% for message in app.session.flashbag.get('info') %}
        <div class="alert alert-info">{{ message }}</div>
    {% endfor %}

    {% block body %}
        <h1>{% block h1 %}{% endblock h1 %}</h1>
    {% endblock body %}
</div> <!-- /container -->


<div class="site-footer">
    <div class="container">
        {#
        <hr class="dashed">
        <div class="row">
            <div class="col-md-6">
                <h4>Talk to us</h4>
                <ul>
                    <li><a href="//twitter.com/GimmeTheMenu">Twitter</a></li>
                    <li><a href="//www.facebook.com/gimmethemenu">Facebook</a></li>
                </ul>
            </div>
            <div class="col-md-6">

                <!-- Begin MailChimp Signup Form -->
                <div>
                    <h4>Newsletter</h4>
                    <p>Keep informed only once a month</p>
                    <form>
                        <div class="input-group">
                            <input type="text" class="form-control noborder" placeholder="Your email">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-primary">Subscribe</button>
                            </div>
                        </div>
                    </form>
                </div>
                <!--End mc_embed_signup-->

            </div>
        </div>
        #}
        <hr>
        <div class="copyright clearfix">
            Talk to us : <a href="//twitter.com/GimmeTheMenu">Twitter</a> or <a href="//www.facebook.com/gimmethemenu">Facebook</a>
            <br>
            {{ render(controller('ApplicationPageBundle:Page:list')) }}
            <p>© 2014 GimmeTheMenu</p>
        </div>
    </div>
</div>

<div id="myAlertModal" class="bs-example-modal-sm modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Oops!</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true&libraries=places"></script>
    <script>
        var assets_dir = '/bundles/applicationmain';
    </script>
{% endblock %}

{% javascripts
    '@ApplicationMainBundle/Resources/public/bootstrap/js/bootstrap.min.js'
    '@ApplicationMainBundle/Resources/public/bootflat/js/*'
    '@ApplicationMainBundle/Resources/public/js/plugins/*'
    '@ApplicationMainBundle/Resources/public/js/*'
    output='js/compiled/js.css'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
</body>
</html>










