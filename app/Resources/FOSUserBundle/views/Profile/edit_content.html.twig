{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h1 class="panel-title">Update my profile</h1>
            </div>
            <div class="panel-body">

                {% if not form.vars.value.facebookId %}
                    <p>
                        <b>Connect your social accounts :</b>
                        {% include 'ApplicationMainBundle:Security:connectors.html.twig' %}
                    </p>
                    <hr>
                {% endif %}


                <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST">

                    {{ form_errors(form) }}

                    {{ form_row(form.firstName) }}

                    {{ form_row(form.email) }}


                    <div class="form-group">
                        <label>
                            {{ form_widget(form.isTimelinePublic) }}
                            My timeline is public
                        </label>
                    </div>

                    {{ form_rest(form) }}

                    <input type="submit" value="{{ 'profile.edit.submit'|trans }}" class="btn btn-primary" />
                </form>
            </div>
        </div>

        <div class="well">
            <a href="{{ path('fos_user_change_password') }}">Change my password</a>
        </div>
    </div>
</div>

